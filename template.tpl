var injectScript = require('injectScript');
var encodeUriComponent = require('encodeUriComponent');
var logToConsole = require('logToConsole');

// REQUIRED: widgetId comes from the template field
var wid = data.widgetId;
if (!wid) {
  logToConsole('WelcomingWeb: Missing required "Widget ID".');
  if (data.gtmOnFailure) data.gtmOnFailure();
  return;
}

// Load the widget bundle; the script can read wid from the querystring
var src = 'https://cdn-01.welcomingweb.com/a11y-widget.bundle.js?wid=' + encodeUriComponent(wid);

// Inject the script
injectScript(
  src,
  function () { if (data.gtmOnSuccess) data.gtmOnSuccess(); },
  function () { if (data.gtmOnFailure) data.gtmOnFailure(); }
);


